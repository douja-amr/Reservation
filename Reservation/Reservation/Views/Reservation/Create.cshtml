@model Reservation.Models.ReservationModel

@{
    ViewData["Title"] = "Create";
    var types = ViewBag.types;
}

<h1>Create</h1>

<h4>ReservationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" value="Pending" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cause" class="control-label"></label>
                <input asp-for="Cause" class="form-control" />
                <span asp-validation-for="Cause" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeReservationId" class="control-label"></label>


                <select asp-for="TypeReservationId" class="browser-default control-label custom-select">
                    <option selected>Open this select menu</option>
                    @foreach (var reserType in types)
                    {
                        <option value="@reserType.Id">@reserType.Name</option>

                    }

                </select>
                <span asp-validation-for="TypeReservationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
